<section class="hero <%= data.section&.css %>">
  <nav class="navbar is-fixed-top" role="navigation" aria-label="main navigation">
    <div class="navbar-brand">
      <a
        role="button" class="navbar-burger burger" aria-label="menu"
        aria-expanded="false" data-target="navbarBasicExample"
      >
        <span aria-hidden="true"></span>
        <span aria-hidden="true"></span>
        <span aria-hidden="true"></span>
      </a>
    </div>

    <div id="navbarBasicExample" class="navbar-menu"">
      <div class="navbar-start">
        <%= link_to('Home', '/', class: 'navbar-item') %>
        <hr class="navbar-divider">
        <%= link_to('About', '/about', class: 'navbar-item') %>
        <hr class="navbar-divider">
        <%= link_to('Talks', '/talks', class: 'navbar-item') %>
        <hr class="navbar-divider">
        <%= link_to('Side projects', '/side-projects', class: 'navbar-item') %>
      </div>
    </div>
  </nav>

  <% if block_given? %>
    <%= yield %>
  <% elsif data.title %>
    <div class="hero-body has-text-centered">
      <div class="container">
        <div class="columns is-centered">
          <div class="column is-half">
            <h1 class="title"><%= data.title %></h1>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</section>
