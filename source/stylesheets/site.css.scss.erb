@import "../../node_modules/bulma/sass/utilities/initial-variables.sass";
$navbar-breakpoint: 10000000px;
@import "bulma/bulma";

body {
  font-family: Merriweather serif;
  background-color: #fafafa;
}
section {
  background-color: #fafafa;
}
html {
  overflow-y: auto;
}
html, body {
  margin: 0;
  min-height: 100%;
  height: 100%;
}
a.inverted {
  color: #363636;
}
a.inverted:hover {
  color: #3273dc;
}
.main-background {
  background-image: image-url('cover.jpg');
  background-size: cover;
}
.navbar-link:hover {
}
.navbar-link.has-arrow-white::after {
  border-color: white;
}
.navbar-link.has-arrow-black::after {
  border-color: black;
}
.is-horizontal-center {
  justify-content: center;
}
.profile-image {
  border-radius: 100%;
  box-shadow: #E7EEF2 0 0 0 1px;
  padding: 6px;
  background-color: #fafafa;
  margin-bottom: 1%;
}
.aspect-ratio {
  position: relative;
  width: 100%;
  height: 0;
  padding-bottom: 75%;
}
.aspect-ratio.wide {
  padding-bottom: 56%;
}
.aspect-ratio iframe {
  position: absolute;
  width: 100%;
  height: 100%;
  left: 0;
  top: 0;
}
.margin-top-3 {
  margin-top: 3% !important;
}
.margin-bottom-5 {
  margin-bottom: 5% !important;
}
.navbar {
  background-color: transparent;
}
.navbar-brand.is-active {
  background-color: #fafafa;
}
