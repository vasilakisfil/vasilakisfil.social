---
pageable: true
per_page: 10
---

<% page_articles.each_with_index do |article, i| %>

  <section class="section h-entry">
    <div class="columns">
      <div class="column is-three-fifths is-offset-one-fifth is-size-5">
        <h2 class="title is-2 has-text-centered p-name"><%= link_to article.title, article, class: "inverted u-url"%> </h2>
        <p class="has-text-justified p-summary">
        <%= article.summary(500, "...") %>
        </p>
      </div>
    </div>

    <footer class="has-text-centered is-italic has-text-weight-light has-text-grey-light">
      <time class="dt-published" datetime="<%= article.date.iso8601 %>"><%= article.date.strftime("%d %b %Y") %></time>
    </footer>
  </section>
<% end %>
<% if paginate %>
<section class="section">
  <div class="columns">
    <div class="column is-three-fifths is-offset-one-fifth is-size-5">
      <hr>
      <p class="has-text-centered">
        <span class="is-italic has-text-weight-light has-text-grey">Page <%= page_number %> of <%= num_pages %></span>
        <% if next_page %>
          <%= link_to('older posts â†’', next_page, class: "button is-pulled-right matches-background has-text-weight-light has-text-grey") %>
        <% end %>
        <% if prev_page %>
          <%= link_to('â† newer posts', prev_page, class: "button is-pulled-left matches-background has-text-weight-light has-text-grey") %>
        <% end %>
      </p>

    </div>
  </div>
</section>
<% end %>
